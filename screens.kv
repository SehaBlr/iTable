<ScreenBuklet>:
    BoxLayout:
        Button:
            text:'Видео'
            on_press: root.manager.current='Видео'
        Button:
            text:'Назад'
            on_press: root.manager.current='Меню'

<ScreenVideo>:
    BoxLayout:
        Button:
            text:'Буклет'
            on_press: root.manager.current='Буклет'
        Button:
            text:'Назад'
            on_press: root.manager.current='Меню'

<Manager>:
    id: screen_manager
    transition: FadeTransition()
    ScreenChoise:
        id: choise
        name:'Выбор языка'
        manager: screen_manager

    ScreenMenu:
        id: menu
        name: 'Меню'
        manager: screen_manager

    ScreenBuklet:
        id: buklet
        name: 'Буклет'
        manager: screen_manager

    ScreenVideo:
        id: video
        name: 'Видео'
        manager: screen_manager