            Rectangle:
                pos: self.pos
                size: self.size
        Image:
            size_hint: None, None
            size: 115, 984
            source: 'img\\pattern_1.png'
            pos: 0 , (app.res_heigth - 984)/2
        Image:
            size_hint: None, None
