#:kivy 1.10.0
# digital.kv
# Digital

<PrezDigital>:
    orientation:'vertical'

<ScreenDigital>:
    GridLayout:
        cols: 2
        canvas:
            Color:
                rgba: 0.97, 0.43, 0.08, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.2,1
            canvas:
                Color:
                    rgba: 0.31,0.31,0.31,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Image:
                source:'img\\logo_white_300x72.png'
                size_hint:1, .25
            Button:
                text:app.uni_text(app.interface_lang,'solution1').upper()
                size_hint:1, .25
                halign:'center'
                font_name:'font\\PT_Sans_Narrow-Bold'
                font_size:48
                on_press: app.change_current('NewProduct')
            Button:
                text:app.uni_text(app.interface_lang,'solution2').upper()
                size_hint:1, .25
                halign:'center'
                font_name:'font\\PT_Sans_Narrow-Bold'
                font_size:48
                on_press: app.change_current('Solution')
            BoxLayout:
                orientation:'vertical'
                size_hint:1, .25
                Widget:
                    size_hint: 1, 0.3
                Label:
                    text:app.uni_text(app.interface_lang,'solution3').upper()
                    size_hint:1, .38
                    halign:'center'
                    font_name:'font\\PT_Sans_Narrow-Bold'
                    font_size:48
                AnchorLayout:
                    anchor_x:'center'
                    anchor_y:'top'
                    size_hint: 1, 0.3
                    Widget:
                        size_hint: None, None
                        size:150, 10
                        canvas:
                            Color:
                                rgba: 0.66, 0.66, 0.66, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8,1
            PrezDigital:
                id: prez_digital
                itable_manager: root.manager                       
            BoxLayout:
                orientation: 'horizontal'
                size_hint:1,None
                height:150
                Widget:
                    size_hint: .5, 1
                BoxLayout:
                    orientation:'horizontal'
                    size_hint: None, 1
                    width: 560
                    AnchorLayout:
                        anchor_y:'top'
                        anchor_x:'center'
                        BoxLayout:
                            orientation:'vertical'
                            size_hint: None, None
                            size: 92,104
                            Widget:
                            Button:
                                text:''
                                background_normal:'img\\prev.png'
                                background_down:'img\\prev.png'
                                size_hint:None,None
                                size:92,92
                                on_release:prez_digital.sl_carousel.load_previous()
                    AnchorLayout:
                        anchor_y:'top'
                        anchor_x:'center'
                        BoxLayout:
                            orientation:'vertical'
                            size_hint: None, None
                            size: 92,104
                            Widget:
                            Button:
                                text:''
                                background_normal:'img\\next.png'
                                background_down:'img\\next.png'
                                size_hint:None,None
                                size:92,92
                                on_release:prez_digital.sl_carousel.load_next()
                BoxLayout:
                    orientation:'horizontal'
                    size_hint: .5, 1
                    Widget:
                    AnchorLayout:
                        anchor_y:'center'
                        anchor_x:'center'
                        Button:
                            text:''
                            size_hint:None,None
                            size:101,64
                            background_normal:'img\\back.png'
                            background_down:'img\\back.png'
                            on_press: root.manager.current='Menu';root.manager.start();root.manager.ids.newproduct.ids.prez_new.sl_carousel.load_slide(root.manager.ids.newproduct.ids.prez_new.sl_carousel.slides[0]);root.manager.ids.solution.ids.prez_flex.sl_carousel.load_slide(root.manager.ids.solution.ids.prez_flex.sl_carousel.slides[0]);root.manager.ids.digital.ids.prez_digital.sl_carousel.load_slide(root.manager.ids.digital.ids.prez_digital.sl_carousel.slides[0])