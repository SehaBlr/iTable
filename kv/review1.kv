#:kivy 1.10.0
# review1.kv
<RevText@MyText>:
    font_name:'font\\PT_Sans_Narrow-Regular'
    size_hint: None, None
    size: 550, 70
    foreground_color:[0, 0, 0, 1]
    background_color: [1, 1, 1, 1]
    font_size:38
    multiline: False
    padding_x:23
    padding_y:10

<RevLbl@Label>:
    size_hint: None, 1
    width: 520
    text_size: self.size
    font_name: 'font\\PT_Sans_Narrow-Regular'
    font_size: 28
    halign: 'left'
    valign: 'middle'

<RevLeftSide@BoxLayout>:
    orientation: 'vertical'
    size_hint: 0.2,1
    canvas:
        Color:
            rgba: 0.31,0.31,0.31,1
        Rectangle:
            pos: self.pos
            size: self.size
    Button:
        size_hint:1, .25
        background_color:0.31,0.31,0.31,1
        background_normal:''
        on_press: app.change_current('Menu')
        Image:
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            source:'img\\logo_white_300x72.png'
            size_hint: None,None
            size: 384,92
    Widget:
        size_hint:1, .125
    BoxLayout:
        orientation:'vertical'
        size_hint:1, .25
        Widget:
            size_hint: 1, 0.4
        Label:
            text:app.uni_text(app.interface_lang,'anketamenu1')
            size_hint:1, 0.6
            halign:'center'
            font_name:'font\\PT_Sans_Narrow-Bold'
            font_size:48
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'top'
            size_hint: 1, 0.4
            Widget:
                size_hint: None, None
                size:288, 10
                canvas:
                    Color:
                        rgba: 0.66, 0.66, 0.66, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
    Button:
        text:app.uni_text(app.interface_lang,'anketamenu2')
        size_hint:1, .25
        halign:'center'
        font_name:'font\\PT_Sans_Narrow-Bold'
        font_size:48
        on_press: app.change_current('Anketa1page')
    Widget:
        size_hint:1, .125

