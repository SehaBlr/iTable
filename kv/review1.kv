#:kivy 1.10.0
# review1.kv
<RevText@MyText>:
    font_name:'font\\PT_Sans_Narrow-Regular'
    size_hint: None, None
    size: 550, 70
    foreground_color:[0, 0, 0, 1]
    background_color: [1, 1, 1, 1]
    font_size:38
    multiline: False
    padding_x:23
    padding_y:10

<RevLbl@Label>:
    size_hint: None, 1
    width: 520
    text_size: self.size
    font_name: 'font\\PT_Sans_Narrow-Regular'
    font_size: 28
    halign: 'left'
    valign: 'middle'

<RevLeftSide@BoxLayout>:
    orientation: 'vertical'
    size_hint: 0.2,1
    canvas:
        Color:
            rgba: 0.31,0.31,0.31,1
        Rectangle:
            pos: self.pos
            size: self.size
    Image:
        source:'img\\logo_white_300x72.png'
        size_hint:1, .25
    Widget:
        size_hint:1, .125
    BoxLayout:
        orientation:'vertical'
        size_hint:1, .25
        Widget:
            size_hint: 1, 0.4
        Label:
            text:app.uni_text(app.interface_lang,'anketamenu1')
            size_hint:1, 0.6
            halign:'center'
            font_name:'font\\PT_Sans_Narrow-Bold'
            font_size:48
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'top'
            size_hint: 1, 0.4
            Widget:
                size_hint: None, None
                size:288, 10
                canvas:
                    Color:
                        rgba: 0.66, 0.66, 0.66, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
    Button:
        text:app.uni_text(app.interface_lang,'anketamenu2')
        size_hint:1, .25
        halign:'center'
        font_name:'font\\PT_Sans_Narrow-Bold'
        font_size:48
        on_press: app.change_current('Anketa1page')
    Widget:
        size_hint:1, .125

<ScreenReview1>:
    GridLayout:
        cols: 2
        canvas:
            Color:
                rgba: 0.97, 0.43, 0.08, 1
            Rectangle:
                pos: self.pos
                size: self.size
        RevLeftSide:
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8,1
            Label:
                text: app.uni_text(app.interface_lang,'review1intro')
                size_hint: 1, .4
                font_name:'font\\PT_Sans_Narrow-Regular'
                font_size:34
                halign:'center'
            AnchorLayout:
                anchor_x:'center'
                anchor_y:'center'
                GridLayout:
                    size_hint: None, None
                    size: 1400, 300
                    cols: 2
                    rows: 2
                    Box:
                        AnchorLayout:
                            anchor_x:'center'
                            RevLbl:
                                text: app.uni_text(app.interface_lang,'anketa1q1')
                        AnchorLayout:
                            anchor_x:'center'
                            RevText:
                                id:ank1q1
                                rootmanager:root.manager
                                keyboard: kbv
                    Box:
                        AnchorLayout:
                            anchor_x:'center'
                            RevLbl:
                                text: app.uni_text(app.interface_lang,'anketa1q2')
                        AnchorLayout:
                            anchor_x:'center'
                            RevText:
                                id:ank1q2
                                rootmanager:root.manager
                                keyboard: kbv
                    Box:
                        AnchorLayout:
                            anchor_x:'center'
                            RevLbl:
                                text: app.uni_text(app.interface_lang,'anketa1q3')
                        AnchorLayout:
                            anchor_x:'center'
                            RevText:
                                id:ank1q3
                                rootmanager:root.manager
                                keyboard: kbv
                    Box:
                        AnchorLayout:
                            anchor_x:'center'
                            RevLbl:
                                text: app.uni_text(app.interface_lang,'anketa1q4')
                        AnchorLayout:
                            anchor_x:'center'
                            RevText:
                                id:ank1q4
                                rootmanager:root.manager
                                keyboard: kbv

            AnchorLayout:
                size_hint:1,None
                height: 400
                MyKeybord:
                    id: kbv
                # UniKeyboard:
                #     size_hint:None,None
                #     size:1450,400  #  1450 - ширина клавиатуры
                #     id:keyborda
                #     tablist:['ank1q1','ank1q2','ank1q3','ank1q4']
                #     idslist:root.ids.items()
            BoxLayout:
                orientation: 'horizontal'
                size_hint:1,None
                height:150
                Widget:
                    size_hint: .5, 1
                BoxLayout:
                    orientation:'horizontal'
                    size_hint: None, 1
                    width: 600
                    AnchorLayout:
                        anchor_y:'center'
                        anchor_x:'center'
                        Button:
                            text: app.uni_text(app.interface_lang,'forward').upper()
                            size_hint:None,None
                            size:193,66
                            font_name:'font\\PT_Sans_Narrow-Regular'
                            font_size:32
                            background_normal:'img\\btn_k.png'
                            background_down:'img\\btn_k_press.png'
                            on_press: root.manager.current='Review2page';root.manager.start(600)
                BoxLayout:
                    orientation:'horizontal'
                    size_hint: .5, 1
                    Widget:
                    AnchorLayout:
                        anchor_y:'center'
                        anchor_x:'center'
                        Button:
                            text:''
                            size_hint:None,None
                            size:101,64
                            background_normal:'img\\back.png'
                            background_down:'img\\back.png'
                            on_press: root.manager.current='Menu';root.manager.start()
