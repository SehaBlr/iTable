#:kivy 1.10.0
# menu.kv
# Main menu and slide/carousel

<PrezMain>:
    orientation:'vertical'


<ScreenMenu>:
    FloatLayout:
        size: 1920, 1080
        pos: 0, 0
        canvas:
            Color:
                rgba: 0.97, 0.43, 0.08, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Image:
            size_hint: None, None
            size: 115, 984
            source: 'img\\pattern_1.png'
            pos: 0, 48
