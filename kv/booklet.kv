#:kivy 1.10.0
# booklet.kv
# Booklet

<Booklet>:
    orientation:'vertical'

<ScreenBooklet>:
    GridLayout:
        cols: 2
        canvas:
            Color:
                rgba: 0.97, 0.43, 0.08, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.2,1
            canvas:
                Color:
                    rgba: 0.31,0.31,0.31,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Image:
                source:'img\\logo_white_300x72.png'
                size_hint:1, .25
            Widget:
                size_hint:1, .125
            BoxLayout:
                orientation:'vertical'
                size_hint:1, .25
                Widget:
                    size_hint: 1, 0.4
                Label:
                    text:app.uni_text(app.interface_lang,'acquainted1').upper()
                    size_hint:1, .2
                    halign:'center'
                    font_name:'font\\PT_Sans_Narrow-Bold'
                    font_size:48
                AnchorLayout:
                    anchor_x:'center'
                    anchor_y:'top'
                    size_hint: 1, 0.4
                    Widget:
                        size_hint: None, None
                        size:150, 10
                        canvas:
                            Color:
                                rgba: 0.66, 0.66, 0.66, 1
                            Rectangle:
                                pos: self.pos
                                size: self.size
            Button:
                text:app.uni_text(app.interface_lang,'acquainted2').upper()
                size_hint:1, .25
                halign:'center'
                font_name:'font\\PT_Sans_Narrow-Bold'
                font_size:48
                on_press: app.change_current('Video');root.manager.start(720)
            Widget:
                size_hint:1, .125
            
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8,1
            # padding:[40,0,40,0]
            Widget:
                size_hint_y: None
                height:50
            Booklet:
                id:prez_booklet
                itable_manager: root.manager


