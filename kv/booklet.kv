#:kivy 1.10.0
# booklet.kv
# Booklet

<ScreenBooklet>:
    GridLayout:
        cols: 2
        canvas:
            Color:
                rgba: 0.97, 0.43, 0.08, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.2,1
            canvas:
                Color:
                    rgba: 0.31,0.31,0.31,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Image:
                source:'img\\logo_white_300x72.png'
                size_hint:1, .25
            Widget:
                size_hint:1, .125
            Label:
                text:app.uni_text(app.interface_lang,'acquainted1')
                size_hint:1, .25
                halign:'center'
                font_name:'font\\PT_Sans_Narrow-Bold'
                font_size:42
            Button:
                text:app.uni_text(app.interface_lang,'acquainted2')
                size_hint:1, .25
                halign:'center'
                font_name:'font\\PT_Sans_Narrow-Bold'
                font_size:42
                on_press: root.manager.current='Video';root.manager.start()
            Widget:
                size_hint:1, .125
            
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8,1
            padding:[40,0,40,0]
            Widget:
            BoxLayout:
                orientation: 'horizontal'
                size_hint:1,None
                height:150
                Widget:
                    size_hint: .8, 1
                AnchorLayout:
                    size_hint: .2, 1
                    Button:
                        text:''
                        size_hint:None,None
                        size:101,64
                        background_normal:'img\\back.png'
                        background_down:'img\\back.png'
                        on_press: root.manager.current='Menu';root.manager.start()
