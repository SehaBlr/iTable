# -*- coding: utf-8 -*-
# anketa1.kv
# 1 page anketa
<Box@BoxLayout>:
    orientation: 'vertical'
    padding: [170,0,30,0]

<ScreenAnketa1>:
    GridLayout:
        cols: 2
        canvas:
            Color:
                rgba: 0.97, 0.43, 0.08, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.2,1
            canvas:
                Color:
                    rgba: 0.31,0.31,0.31,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Image:
                source:'img\\logo_white_300x72.png'
            Label:
                text:app.uni_text(app.interface_lang,'anketamenu1')
                halign:'center'
                font_name:'font\\PT_Sans_Narrow-Bold'
                font_size:42
            Button:
                text:app.uni_text(app.interface_lang,'anketamenu2')
                halign:'center'
                font_name:'font\\PT_Sans_Narrow-Bold'
                font_size:42
            Button:
                text:app.uni_text(app.interface_lang,'anketamenu3')
                halign:'center'
                font_name:'font\\PT_Sans_Narrow-Bold'
                font_size:42

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8,1
            Label:
                text: app.uni_text(app.interface_lang,'anketa1intro')
                size_hint: 1, .4
                font_name:'font\\PT_Sans_Narrow-Regular'
                font_size:34
                halign:'center'
            GridLayout:
                padding: [0,50,0,50]
                cols: 2
                rows: 2
                Box:
                    Label:
                        text: app.uni_text(app.interface_lang,'anketa1q1')
                    TextInput:
                        id:ank1q1
                Box:
                    Label:
                        text: app.uni_text(app.interface_lang,'anketa1q2')
                    TextInput:
                        id:ank1q2
                Box:
                    Label:
                        text: app.uni_text(app.interface_lang,'anketa1q3')
                    TextInput:
                        id:ank1q3
                Box:
                    Label:
                        text: app.uni_text(app.interface_lang,'anketa1q4')
                    TextInput:
                        id:ank1q4
            AnchorLayout:
                size_hint:1,None
                height: 400
                UniKeyboard:
                    size_hint:None,None
                    size:1450,400  #  1450 - ширина клавиатуры
                    id:keyborda
                    tablist:['ank1q1','ank1q2','ank1q3','ank1q4']
                    idslist:root.ids.items()
            BoxLayout:
                orientation: 'horizontal'
                size_hint:1,None
                height:150
                Widget:
                    size_hint: .4, 1
                    width: 650
                AnchorLayout:
                    size_hint: .2, 1
                    width: 200
                    Button:
                        text:''
                        size_hint:None,None
                        size:101,64
                Widget:
                    size_hint: .2, 1
                    width: 650
                AnchorLayout:
                    size_hint: .2, 1
                    width: 200
                    Button:
                        text:''
                        size_hint:None,None
                        size:101,64
                        background_normal:'img\\back.png'
                        background_down:'img\\back.png'
                        on_press: root.manager.current='Menu'
