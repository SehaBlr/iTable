#:kivy 1.10.0
# anketa1.kv
# 1 page anketa
<Box@BoxLayout>:
    orientation: 'vertical'
    padding: [30,0,30,0]

<AnketaLeftSide@BoxLayout>:
    orientation: 'vertical'
    size_hint: 0.2,1
    canvas:
        Color:
            rgba: 0.31,0.31,0.31,1
        Rectangle:
            pos: self.pos
            size: self.size
    Image:
        source:'img\\logo_white_300x72.png'
        size_hint:1, .25
    Widget:
        size_hint:1, .125
    Button:
        text:app.uni_text(app.interface_lang,'anketamenu1')
        size_hint:1, .25
        halign:'center'
        font_name:'font\\PT_Sans_Narrow-Bold'
        font_size:48
        on_press: app.change_current('Review1page')
    BoxLayout:
        orientation:'vertical'
        size_hint:1, .25
        Widget:
            size_hint: 1, 0.4
        Label:
            text:app.uni_text(app.interface_lang,'anketamenu2')
            size_hint: 1, 0.6
            halign:'center'
            font_name:'font\\PT_Sans_Narrow-Bold'
            font_size:48
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'top'
            size_hint: 1, 0.4
            Widget:
                size_hint: None, None
                size:180, 10
                canvas:
                    Color:
                        rgba: 0.66, 0.66, 0.66, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
    Widget:
        size_hint:1, .125

<ScreenAnketa1>:
    GridLayout:
        cols: 2
        canvas:
            Color:
                rgba: 0.97, 0.43, 0.08, 1
            Rectangle:
                pos: self.pos
                size: self.size
        AnketaLeftSide:
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8,1
            Label:
                text: app.uni_text(app.interface_lang,'anketa1intro')
                size_hint: 1, .4
                font_name:'font\\PT_Sans_Narrow-Regular'
                font_size:34
                halign:'center'
            AnchorLayout:
                anchor_x:'center'
                anchor_y:'center'
                GridLayout:
                    size_hint: None, None
                    size: 1400, 300
                    cols: 2
                    rows: 2
                    Box:
                        AnchorLayout:
                            anchor_x:'center'
                            RevLbl:
                                text: app.uni_text(app.interface_lang,'anketa1q1')
                        AnchorLayout:
                            anchor_x:'center'
                            RevText:
                                id:ank1q1
                    Box:
                        AnchorLayout:
                            anchor_x:'center'
                            RevLbl:
                                text: app.uni_text(app.interface_lang,'anketa1q2')
                        AnchorLayout:
                            anchor_x:'center'
                            RevText:
                                id:ank1q2
                    Box:
                        AnchorLayout:
                            anchor_x:'center'
                            RevLbl:
                                text: app.uni_text(app.interface_lang,'anketa1q3')
                        AnchorLayout:
                            anchor_x:'center'
                            RevText:
                                id:ank1q3
                    Box:
                        AnchorLayout:
                            anchor_x:'center'
                            RevLbl:
                                text: app.uni_text(app.interface_lang,'anketa1q4')
                        AnchorLayout:
                            anchor_x:'center'
                            RevText:
                                id:ank1q4
            AnchorLayout:
                size_hint:1,None
                height: 400
                UniKeyboard:
                    size_hint:None,None
                    size:1450,400  #  1450 - ширина клавиатуры
                    id:keyborda
                    tablist:['ank1q1','ank1q2','ank1q3','ank1q4']
                    idslist:root.ids.items()
            BoxLayout:
                orientation: 'horizontal'
                size_hint:1,None
                height:150
                Widget:
                    size_hint: .5, 1
                BoxLayout:
                    orientation:'horizontal'
                    size_hint: None, 1
                    width: 600
                    AnchorLayout:
                        size_hint: .2, 1
                        width: 200
                        Button:
                            text: app.uni_text(app.interface_lang,'forward').upper()
                            size_hint:None,None
                            size:193,66
                            font_name:'font\\PT_Sans_Narrow-Regular'
                            font_size:32
                            background_normal:'img\\btn_k.png'
                            background_down:'img\\btn_k_press.png'
                            on_press: root.manager.current='Anketa2page';root.manager.start()
                BoxLayout:
                    orientation:'horizontal'
                    size_hint: .5, 1
                    Widget:
                    AnchorLayout:
                        anchor_y:'center'
                        anchor_x:'center'
                        Button:
                            text:''
                            size_hint:None,None
                            size:101,64
                            background_normal:'img\\back.png'
                            background_down:'img\\back.png'
                            on_press: root.manager.current='Menu';root.manager.start()
